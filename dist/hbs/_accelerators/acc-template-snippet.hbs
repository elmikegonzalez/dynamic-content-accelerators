<a href="{{snippet.cta.value}}" class="amp-dc-snippet js_dc_snippet">
    {{#if snippet.image}}
    <div class="amp-dc-image bbb">
        {{> acc-template-image-generator
            image=snippet.image
            mediaQueries='[
                {"query": 768, "width": 768},
                {"query": 1024, "width": 512},
                {"query": 1025, "width": 800}
            ]'
            classNames='snippet'
        }}
    </div>
    {{/if}}

    {{#if snippet.title}}
    <div class="amp-dc-title">{{snippet.title}}</div>
    {{else}}
    {{#if title}}
    <div class="amp-dc-title">{{title}}</div>
    {{/if}}
    {{/if}}

    {{#if snippet.description}}
    <div class="amp-dc-description">{{snippet.description}}</div>
    {{/if}}

    {{#if cta}}
    {{#if cta.value}}
    <div class="amp-dc-link">
                <span class="amp-dc-snippet-more" href="{{snippet.cta.value}}">
                    {{#if snippet.cta.label}}
                        {{snippet.cta.label}}
                    {{else}}
                        Read more >>
                    {{/if}}
                </span>
    </div>
    {{/if}}
    {{/if}}
</a>
